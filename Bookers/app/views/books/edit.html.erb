<div class="container">

<% if flash[:notice] %>
　<div>
	<%= flash[:notice] %>
　</div>
<% end %>

	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<h1>Editing Book</h1>
			<%= form_for(@book) do |f| %>
			<%= f.label :title %><br>
			<%= f.text_field :title %><br>
			<%= f.label :Opninon %><br>
			<%= f.text_area :body %><br>
			<%= f.submit 'Update book' %>
			<% end %>
			<%= link_to "Show", book_path(@book) %>|<%= link_to "Back", books_path %>
		</div>
	</div>
</div>