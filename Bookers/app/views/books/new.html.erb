<div class="col-xs-3">
<h2>New book</h2>
	<%= form_for(@book) do |f| %>
		<div class="field row">
			<label for="book_title">Title</label>
			<% f.text_field :title %>
		</div>
		<div class="row">
			<label for="book_body">Opinion</label>
			<% f.text_area :body %>
		</div>

		<%=f.submit 'Create Book', class:"#" %><!-- btnのクラスを後で設定 -->
	<% end %>
</div>