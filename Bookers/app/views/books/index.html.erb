<!-- http://localhost:3000/books -->

<div class="body">
	<div class="container">
		<br>
		<br>
		<% if flash[:notice] %>
ã€€		<div>
			<%= flash[:notice] %>
		</div>
		<% end %>
		<div class="row">
			<div class="col-xs-3">
				<%= render 'users/user_info', user: @user %>
				<%= render 'books/new_book', book: @book %>
			</div>
			<div class="col-xs-9">
				<h2>Books</h2>
				<table class="table table-hover table-inverse">
					<thead>
						<tr>
							<th></th>
							<th>Title</th>
							<th>Opinion</th>
						</tr>
					</thead>
					<tbody>
						<% @books.each do |book| %>
							<tr>
								<td>
									<div class="user-edit-image">
										<%= link_to user_path(book.user.id) do %>
        									<%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, class: "attachment user profile_image fallback", fallback: "no_image.jpg", size: "40x40"  %>
        								<% end %>
    								</div>
								</td>
								<td><%= link_to book.title, book_path(book) %></td>
								<td><%= book.body %></td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>