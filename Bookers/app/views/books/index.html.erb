					</thead>
					<tbody>
						<% @books.each do |book| %>
							<tr>
								<td>
									<div class="user-edit-image">
        								<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "attachment user profile_image fallback" %>
    								</div>
								</td>
								<td><%= link_to book.title, book_path(book) %></td>
								<td><%= book.body %></td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>