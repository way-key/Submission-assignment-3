<!-- http://localhost:3000/books/# -->

<div class="body">
	<div class="conteiner">
		<div class="row">
			<div class="col-xs-3">
				<h2>User into</h2>
				<img class="">
				<table class="table">
					<tbody>
						<tr>
							<th></th>
							<th></th>
						</tr>
						<tr>
							<th></th>
							<th></th>
						</tr>
					</tbody>
				</table>
				<div class="row">
					<a class="col-xs-12 btn btn-default glyphicon glyphicon-wrench">
						<!-- edituserへ -->
					</a>
				</div>
				<h2>New book</h2>
				<%= form_for(@book) do |f| %>
				<div class="field row">
					<%= f.label :title %><br>
					<%= f.text_field :title %>
				</div>
				<div class="area row">
					<%= f.label :body %><br>
					<%= f.text_area :body %>
				</div>
				<%= f.submit 'Create Book' %>
				<% end %>
			</div>
			<div class="col-xs-9">
				<h2>Book detail</h2>
				<table class="table table-hover table-inverse">
					<tbody>
						<tr>
							<td></td>
							<td><%= @book.title %></td>
							<td><%= @book.body %></td>
							<td><%=link_to "edit", "#" %></td>
							<td>
								<% if @book.user == current_user %>
								<%= link_to "Destroy", @book, method: :delete, data: {confirm: "本当に消しますか?"} %>
							    <% end %>
							</td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>