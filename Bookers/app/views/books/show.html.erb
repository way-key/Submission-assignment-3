<!-- http://localhost:3000/books/# -->

<div class="body">
	<div class="conteiner">
		<br>
		<br>
		<br>
		<% if flash[:notice] %>
		<div>
			<%= flash[:notice] %>
		</div>
		<% end %>
		
		<div class="row">
			<div class="col-xs-3">
				<h2>User into</h2>
				<h2>New book</h2>
				<%= form_for(@book) do |f| %>
				<div class="field row">
					<%= f.label :title %><br>
					<%= f.text_field :title, class: "col-xs-12 book_title" %>
				</div>
				<div class="area row">
					<%= f.label :Opninon %><br>
					<%= f.text_area :body, class: "col-xs-12 book_body" %>
				</div>
				<div class="actions row">
				<br>
					<%= f.submit 'Create Book', class: "btn btn-primary col-xs-12" %>
				</div>
				<% end %>
			</div>
			<div class="col-xs-9">
				<h2>Book detail</h2>
				<table class="table">
					<tbody>
						<tr>
							<td>
								<td>
									<div class="user-edit-image">
    								</div>
								</td>
							</td>
							<td><%= @booka.title %></td>
							<td><%= @booka.body %></td>
							<% if @booka.user == current_user %>
							<td><%= link_to "edit", edit_book_path(@booka), class: "btn-sm btn-success edit_book_23440" %></td>
							<td><%= link_to "Destroy", book_path(@booka), method: :delete, data: {confirm: "Are you sure?"}, class: "btn-sm btn-danger destroy_book_23440" %></td>
							<% end %>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>