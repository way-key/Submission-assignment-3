<!-- http://localhost:3000/books/# -->

<div class="body">
	<div class="container">
		<br>
		<br>
		<br>
		<% if flash[:notice] %>
		<div>
			<%= flash[:notice] %>
		</div>
		<% end %>

		<div class="row">
			<div class="col-xs-3">
				<%= render 'users/user_info', user: @user %>
				<%= render 'books/new_book', book: @book %>
			</div>
			<div class="col-xs-9">
				<h2>Book detail</h2>
				<table class="table">
					<tbody>
						<tr>
							<td>
								<td>
									<div class="user-edit-image">
										<%= link_to user_path(@user.id) do %>
											<%= attachment_image_tag @user, :profile_image, :fill, 50, 50, class: "attachment user profile_image", fallback: "no_image.jpg", size: "50x50" %><br>
											<%= @user.name %>
										<% end %>
    								</div>
								</td>
							</td>
							<td><%= link_to @booka.title, user_path(@user.id) %></td>
							<td><%= @booka.body %></td>
							<% if @booka.user == current_user %>
							<td><%= link_to "Edit", edit_book_path(@booka), class: "btn-sm btn-success edit_book_23440" %></td>
							<td><%= link_to "Destroy", book_path(@booka), method: :delete, data: {confirm: "Are you sure?"}, class: "btn-sm btn-danger destroy_book_23440" %></td>
							<% end %>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>