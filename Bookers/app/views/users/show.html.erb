<!-- http://localhost:3000/users/# -->

<div class="body">
	<div class="container">
		<br>
		<br>
		<br>
		<% if flash[:notice] %>
		<div>
			<%= flash[:notice] %>

		</div>
		<% end %>
		<div class="row">
			<div class="col-xs-3">
				<%= render 'users/user_info', user: @user %>
				<%= render 'books/new_book', book: @book %>
			</div>
			<div class="col-xs-9">
				<h2>Books</h2>
				<table class="table table-hover table-inverse">
					<thead>
						<tr>
							<th colspan="1"></th>
							<th>Title</th>
							<th>Opinion</th>
						</tr>
					</thead>
					<tbody>
						<% @books.each do |book| %>
							<tr>
								<td>
									<div class="user-edit-image">
										<%= attachment_image_tag @user, :profile_image, class: "attachment user profile_image fallback", fallback: "no_image.jpg" %>
    								</div>
								</td>
								<td>
									<%if @user == current_user %>
										<%= link_to book.title, book_path(book) %>
									<% else %>
										<%= link_to book.title, "#" %>
									<% end %>
								</td>
								<td><%= book.body %></td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>