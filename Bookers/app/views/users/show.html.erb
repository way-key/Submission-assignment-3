<!-- http://localhost:3000/users/# -->

<div class="body">
	<div class="conteiner">
		<% if flash[:notice] %>
		<div>
			<%= flash[:notice] %>

		</div>
		<% end %>
		<div class="row">
			<div class="col-xs-3">
				<%= render 'users/user_info', user: @user %>
				<h2>New book</h2>
				<div class="field row">
				</div>
				<div class="area row">
				</div>
			</div>
			<div class="col-xs-9">
				<h2>Books</h2>
				<table class="">
					<thead>
						<tr>
							<th colspan="1"></th>
							<th>Title</th>
							<th>Opinion</th>
						</tr>
					</thead>
					<tbody>
						<% @books.each do |book| %>
							<tr>
								<td>
									<div class="user-edit-image">
        							<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb" %>
    								</div>
								</td>
								<td><%= link_to book.title, book_path(book) %></td>
								<td><%= book.body %></td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>