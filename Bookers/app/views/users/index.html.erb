<!-- http://localhost:3000/users -->

<div class="body">
	<div class="container">
		<br>
		<br>
		<% if flash[:notice] %>
		<div>
			<%= flash[:notice] %>

		</div>
		<% end %>
		<div class="row">
			<div class="col-xs-3">
				<%= render 'users/user_info', user: @user %>
				<%= render 'books/new_book', book: @book %>
			</div>
			<div class="col-xs-9">
				<h2>Users</h2>
				<table class="table">
					<thead>
						<tr>
							<th>image</th>
							<th>name</th>
							<th colspan="3"></th>
						</tr>
					</thead>
					<tbody>
						<% @users.each do |user| %>
							<tr>
								<td>
									<div>
        									<%= attachment_image_tag user, :profile_image, :fill, 40, 40, class: "attachment user profile_image fallback", fallback: "no_image.jpg" %>
    								</div>
								</td>
								<td><%= user.name %></td>
								<td><%= link_to "Show", user_path(user) %></td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>